# RISTORANTEMOKA - Configurazione applicazione
Options -Indexes
DirectoryIndex index.html index.php

# Permetti l'accesso a tutti i file
<Files "*">
    Order Allow,Deny
    Allow from all
</Files>

# Specifica per file PHP - nessuna restrizione
<Files *.php>
    Order Allow,Deny
    Allow from all
</Files>

# Sicurezza: blocca accesso a file sensibili
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|env)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Headers per performance
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
</IfModule>